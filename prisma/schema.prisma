// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Statement {
  id             String   @id @default(cuid())
  text           String
  createdAt      DateTime @default(now())
  totalVotes     Int      @default(0)
  agreeWeight    Float    @default(0)
  disagreeWeight Float    @default(0)
  quiz           Quiz[]
  summary        Summary?
}

model Quiz {
  id          String    @id @default(cuid())
  question    String
  choices     String    // JSON array of strings
  answerIndex Int
  statement   Statement @relation(fields: [statementId], references: [id])
  statementId String
}

model Summary {
  id             String    @id @default(cuid())
  forReasons     String    // JSON array of strings
  againstReasons String    // JSON array of strings
  statement      Statement @relation(fields: [statementId], references: [id])
  statementId    String    @unique
}